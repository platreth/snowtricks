{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Roles</th>
                <th>Pseudo</th>
                <th>Picture</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                <td>{{ user.pseudo }}</td>
                <td><img height="200px" class="embed-responsive-item" alt="{{ user.picture.title }}" src="{{asset('/uploads/file/')}}{{ user.picture.name }}" ></td>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
