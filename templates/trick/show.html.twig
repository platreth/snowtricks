    <!--Main layout-->
    <main class="mt-5 pt-5" style="padding-left: 0 !important;">
        <div class="container">

            <!--Section: Post-->
            <section class="mt-4">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col">

                        <!--Featured Image-->
                        <div class="card mb-4 wow fadeIn text-center position-relative">

                            <img src="{{asset('uploads/picture/'~trick.cover)}}" class="img-fluid" alt="{{ trick.name }}">

                            <div class="position-absolute">
                                {% if app.user == trick.author %}
                                    <a href="{{ path('trick_edit_cover', {'slug': trick.slug}) }}"><div class="edit"></div></a>
                                {% endif %}
                            </div>

                                <h1 class="h5 my-4">{{trick.name}}</h1>
                            <div class="container">
                                <div class="row">
                                <div class="col">
                            {% for image in trick.images %}
                                <img src="{{asset('uploads/picture/'~ image.name)}}" class="img-thumbnail" style="height: 100px" alt="{{ image.title }}">

                            {% endfor %}
                                </div>
                                    <div class="col">
                                    {% for video in trick.videos %}
                                        <video controls src="{{asset('uploads/video/'~ video.name)}}" class="img-thumbnail" style="height: 200px" alt="{{ video.title }}">

                                    {% endfor %}
                                </div>
                            </div>


                        </div>

                        <div class="card mb-4 wow fadeIn text-center">


